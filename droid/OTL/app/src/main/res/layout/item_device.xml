<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <RelativeLayout
        android:id="@+id/item_device_rl"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:background="@drawable/item_device_gradient_active"
        android:layout_marginBottom="4dp">
        <ImageView
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_light"
            android:layout_centerVertical="true"
            android:id="@+id/item_device_img"/>
        <LinearLayout
            android:layout_toEndOf="@id/item_device_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_device_title"
                android:layout_width="match_parent"
                android:fontFamily="@font/os_bold"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:text="Testo"/>
            <TextView
                android:id="@+id/item_device_subtitle"
                android:layout_width="match_parent"
                android:fontFamily="@font/os_regular"
                android:gravity="center|left"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:text="Testo"/>
        </LinearLayout>
    </RelativeLayout>


</layout>