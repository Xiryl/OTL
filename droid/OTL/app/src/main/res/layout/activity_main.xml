<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data/>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_panna"
    tools:context=".views.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accendi"
        android:id="@+id/accendi"/>

    <Button
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spegni"
        android:backgroundTint="#ff00f0"
        android:id="@+id/spegni"/>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/mainActivity_bottomappbar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorPrimary"
        app:fabAlignmentMode="center"
        app:elevation="8dp">

    </com.google.android.material.bottomappbar.BottomAppBar>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mainactivity_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/mainActivity_bottomappbar"
        app:tint="@color/fab_icon"
        app:backgroundTint="@android:color/white"
        android:src="@drawable/ic_home"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>