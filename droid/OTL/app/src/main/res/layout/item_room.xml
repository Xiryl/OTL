<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
    <RelativeLayout
        android:id="@+id/item_room_rl"
android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/item_room_gradient_inactive"
        android:layout_marginBottom="4dp">
        <ImageView
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_sofa"
            android:layout_centerVertical="true"
            android:id="@+id/item_room_img"/>
    </RelativeLayout>

        <TextView
    android:layout_below="@id/item_room_rl"
            android:id="@+id/item_room_title"
            android:layout_width="70dp"
            android:fontFamily="@font/os_regular"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Salotto"/>
    </RelativeLayout>



</layout>